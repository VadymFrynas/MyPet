<Window x:Class="Wallet.Confirm"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Wallet" Height="220.016" Width="228.131" WindowStartupLocation="CenterScreen">
    <Grid Background="DarkSeaGreen">
        <StackPanel>
            <PasswordBox x:Name="Pas_box" materialDesign:HintAssist.Hint="Enter password" Style="{StaticResource MaterialDesignPasswordBox}" Margin="10,17,24,17" PreviewMouseLeftButtonUp="Pas_box_PreviewMouseLeftButtonUp" Height="37"/>
            <Button x:Name="ConfirmPass" Content="Confirm" HorizontalAlignment="Left" Width="188" Background="Black" Foreground="YellowGreen" Style="{StaticResource MaterialDesignFlatDarkBgButton}" Click="Confirm_Click" Margin="10,10,0,0"/>
            <Button x:Name="Back" Content="Back to menu" HorizontalAlignment="Left" Margin="10,20,12,5" Width="188" Background="Black" Foreground="YellowGreen" Style="{StaticResource MaterialDesignFlatDarkBgButton}" Height="37" Click="Back_Click" RenderTransformOrigin="0.503,0.508"/>
        </StackPanel>
    </Grid>
</Window>
